<div class="container mt-5">
  <h1 class="mb-4 text-center">Editar usuário</h1>
  <form action="/usuarios/<%= user.id %>?_method=PUT" method="POST">
    <div class="form-group">
      <label for="matricula">Matrícula</label>
      <input type="text" class="form-control" id="matricula" name="matricula" value="<%= user.matricula %>" required>
    </div>
    <div class="form-group">
      <label for="nome">Nome</label>
      <input type="text" class="form-control" id="nome" name="nome" value="<%= user.nome %>" required>
    </div>
    <div class="form-group">
      <label for="email">E-mail</label>
      <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>" required>
    </div>
    <div class="form-group">
      <label for="idade">Idade</label>
      <input type="number" class="form-control" id="idade" name="idade" value="<%= user.idade %>" required>
    </div>
    <div class="form-group">
      <label for="senha">Senha</label>
      <input type="password" class="form-control" id="senha" name="senha" value="<%= user.senha %>" required>
    </div>
    <button type="submit" class="btn btn-warning btn-block mt-3">Salvar</button>
  </form>
</div>
