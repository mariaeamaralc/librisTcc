<h1>Lista de produtos</h1>

<!-- Formulário de Filtros -->
<form id="filter-form">   
    <div class="form-group">
        <label for="categoria">Categoria:</label>
        <select class="form-control" id="categoria" name="categoria">
            <option value="">Todas</option>
            <% produtos.forEach(produto => { %>
                <option value="<%= produto.categoria %>"><%= produto.categoria_nome %></option>
            <% }) %>
        </select>
    </div>
    <button type="submit">Filtrar</button>
</form>

<!-- Controles de Paginação -->
<div id="pagination-controls">
    <button id="prev-page" disabled>Anterior</button>
    <span id="page-info">Página 1</span>
    <button id="next-page">Próxima</button>
</div>

<script>
let currentPage = 1;

function loadProducts(page) {
    $.ajax({
        url: '/produtos',
        type: 'GET',
        data: $('#filter-form').serialize() + '&page=' + page,
        success: function(response) {
            $('#product-list').html(response);
            currentPage = page;
            updatePaginationControls();
        },
        error: function(error) {
            alert('Erro ao aplicar filtros');
        }
    });
}

function updatePaginationControls() {
    $('#page-info').text('Página ' + currentPage);
    $('#prev-page').prop('disabled', currentPage === 1);
}

$('#filter-form').on('submit', function(e) {
    e.preventDefault();
    loadProducts(1);
});

$('#prev-page').on('click', function() {
    if (currentPage > 1) {
        loadProducts(currentPage - 1);
    }
});

$('#next-page').on('click', function() {
    loadProducts(currentPage + 1);
});

// Carregar a primeira página ao iniciar
loadProducts(1);
</script>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Preço</th>
            <th>Quantidade</th>
            <th>Categoria</th>
        </tr>
    </thead>
    <tbody id="product-list">
        <% produtos.forEach(produto => { %>
            <tr>
                <td><%= produto.id %></td>
                <td><%= produto.nome %></td>
                <td><%= produto.descricao %></td>
                <td><%= produto.preco %></td>
                <td><%= produto.quantidade %></td>
                <td><%= produto.categoria_nome %></td>
            </tr>
        <% }) %>
    </tbody>
</table>
