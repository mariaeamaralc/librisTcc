<div class="dashboard-container">
  <h2>Detalhes do Material</h2>

  <% 
    let atrasado = false;
    if (emprestimo && emprestimo.dataDevolucaoOriginal) {
      const dataDevolucao = new Date(emprestimo.dataDevolucaoOriginal);
      const hoje = new Date();
      hoje.setHours(0, 0, 0, 0); 
      dataDevolucao.setHours(0, 0, 0, 0); 
      atrasado = hoje > dataDevolucao; 
    }
  %>

  <% if (success) { %>
    <div class="alert alert-success"><%= decodeURIComponent(success) %></div>
  <% } %>
  <% if (erro) { %>
    <div class="alert alert-danger"><%= decodeURIComponent(erro) %></div>
  <% } %>

  <% if (emprestimo) { %>
    
    <div class="table-wrapper">
      <table class="table-custom">
        <thead>
          <tr>
            <th>Título</th>
            <th>Autor</th>
            <th>Data de Devolução</th>
            <th>Status</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= emprestimo.titulo %></td>
            <td><%= emprestimo.autor %></td>
            <td>
              <span class="status-date <%= atrasado ? 'atrasado' : 'ativo' %>">
                <%= emprestimo.dataDevolucaoFormatada %>
              </span>
            </td>
            <td>
              <span class="status-badge <%= atrasado ? 'badge-danger' : 'badge-success' %>">
                <%= atrasado ? 'Em Atraso' : 'Ativo' %>
              </span>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
    
    <br>
    <form action="/emprestimo/renovar" method="POST">
      <input type="hidden" name="emprestimoId" value="<%= emprestimo.emprestimoId %>">
      <button type="submit" class="btn btn-action">
          Renovar
      </button>
      <p class="text-info">
        *A renovação será aplicada imediatamente se solicitada antes da data de devolução.
      </p>
    </form>

  <% } else { %>
    <div class="alert alert-success">
      Você não possui nenhum empréstimo ativo no momento.
    </div>
    <p class="text-info">
      <a href="/material/pesquisar" class="link-acervo">Clique aqui</a> para navegar pelo acervo.
    </p>
  <% } %>

</div>

