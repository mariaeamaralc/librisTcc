<h1>Lista de material</h1>
<% if (success) { %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    Material cadastrado com sucesso!
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<!-- Formulário de filtro por categoria -->
<form method="GET" action="/material">
    <div class="form-group">
        <label for="categoria">Filtrar por Categoria:</label>
        <select id="categoria" name="categoria" class="form-control">
            <option value="">Todas as Categorias</option>
            <% categorias.forEach(categoria => { %>
                <option value="<%= categoria.id %>" <%= categoriaSelecionada == categoria.id ? 'selected' : '' %>><%= categoria.nome %></option>
            <% }) %>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Filtrar</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Preço</th>
            <th>Quantidade</th>
            <th>Categoria</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        <% material.forEach(material => { %>
            <tr>
                <td><%= material.id %></td>
                <td><%= material.nome %></td>
                <td><%= material.descricao %></td>
                <td><%= material.preco %></td>
                <td><%= material.quantidade %></td>
                <td><%= material.categoria_nome %></td>
                <td>
                    <a href="/material/<%= material.id %>" class="btn btn-primary">View</a>
                    <a href="/material/<%= material.id %>/edit" class="btn btn-warning">Edit</a>
                    <form action="/material/<%= material.id %>?_method=DELETE" method="POST" style="display: inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>
