<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Libris | Materiais</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    html, body {
      height: 100%;
      margin: 0;
      padding: 0;
      background: linear-gradient(135deg, #151F55, #AD8D8D);
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      color: #cebaba;
    }

    .container-custom {
      background-color: #283372;
      margin: 30px auto;
      padding: 35px 40px;
      border-radius: 18px;
      box-shadow: 0 0 25px rgba(0,0,0,0.5);
      max-width: 1100px;
    }

    h1 {
      color: #cebaba;
      text-align: center;
      margin-bottom: 35px;
      font-weight: 500;
      letter-spacing: 1px;
    }

    label {
      font-size: 1rem;
      margin-bottom: 4px;
    }

    input.form-control, select.form-control {
      background-color: #fff;
      color: #000;
      border: 1px solid #ccc;
      font-size: 0.9rem;
      padding: 8px 10px;
      border-radius: 6px;
      height: 38px;
      width: 100%;
      box-sizing: border-box;
    }

    .btn-custom {
      background-color: #AD8D8D;
      color: #0e0e0e;
      border: none;
      border-radius: 6px;
      padding: 5px 12px;
      font-size: 0.85rem;
      font-weight: 400;
      transition: 0.3s;
      letter-spacing: 0.3px;
    }

    .btn-custom:hover {
      background-color: #283372;
      color: #AD8D8D;
      box-shadow: 0 0 6px rgba(173, 141, 141, 0.5);
    }

    .table {
      background-color: rgba(255, 255, 255, 0.02);
      border-collapse: separate;
      border-spacing: 0;
      width: 100%;
      border-radius: 10px;
      overflow: hidden;
    }

    .table th {
  background-color: #3b4a8a !important;
  text-align: center;
  font-weight: 500;
  font-size: 0.9rem;
  color: #AD8D8D;
  padding: 10px;
  border-bottom: 1px solid rgba(173, 141, 141, 0.4) !important; 
}

.table td {
 background-color: #1e285e;
  text-align: center;
  padding: 10px 8px;
  font-size: 0.88rem;
  color: #AD8D8D;
  border-bottom: 1px solid rgba(173, 141, 141, 0.4)  !important;
 
}


    .table tbody tr:hover {
      background-color: rgba(255, 255, 255, 0.06) !important;
      transition: background 0.2s;
    }

    .action-buttons {
      display: flex;
      justify-content: center;
      flex-wrap: wrap;
      gap: 6px;
    }

    .action-buttons form {
      margin: 0;
    }

    .alert {
      background-color: #444;
      border: 1px solid #AD8D8D;
      color: #cebaba;
      font-size: 0.9rem;
    }
  </style>
</head>
<body>
  <div class="container-custom">
    <h1>Materiais Cadastrados</h1>

    <% const termoBusca = typeof query !== 'undefined' ? query : ''; %>

    <form method="GET" action="/material/pesquisar" class="mb-4" style="max-width: 500px;">
      <label for="query">Buscar por:</label>
      <div class="d-flex gap-2">
        <input type="text" id="query" name="query" class="form-control" placeholder="Digite número de registro, título ou autor" value="<%= termoBusca %>">
        <button type="submit" class="btn btn-custom">Buscar</button>
      </div>
    </form>

    <form method="GET" action="/material" class="d-flex align-items-end mb-4" style="max-width: 500px;">
      <div class="form-group flex-grow-1 mb-0 mr-2">
        <label for="categoria">Filtrar por Categoria:</label>
        <select id="categoria" name="categoria" class="form-control text-dark">
          <option value="">Todas as categorias</option>
          <% categoria.forEach(cat => { %>
            <option value="<%= cat.id %>" <%= cat.id == categoriaSelecionada ? 'selected' : '' %>><%= cat.nome %></option>
          <% }) %>
        </select>
      </div>
      <button type="submit" class="btn btn-custom">Filtrar</button>
    </form>

    <table class="table table-bordered mt-4">
      <thead>
        <tr>
          <th>N° Registro</th>
          <th>Título</th>
          <th>Autor</th>
          <th>Editora</th>
          <th>Idioma</th>
          <th>Categoria</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <% materiais.forEach(material => { %>
          <tr>
            <td><%= material.n_registro %></td>
            <td>
              <%= material.titulo %>
              <% if (pendente && material.n_registro == pendente) { %>
                <span class="badge badge-warning ml-2">Pendente</span>
              <% } %>
            </td>
            <td><%= material.autor %></td>
            <td><%= material.editora %></td>
            <td><%= material.idioma %></td>
            <td><%= material.categoria_nome %></td>
            <td>
              <div class="action-buttons">
                <a href="/material/<%= material.n_registro %>" class="btn btn-sm btn-custom">Ver</a>
                <% if (userRole === 'admin') { %>
                  <a href="/material/<%= material.n_registro %>/edit" class="btn btn-sm btn-custom">Editar</a>
                  <form action="/material/<%= material.n_registro %>/delete" method="POST">
                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Tem certeza que deseja excluir este material?')">Excluir</button>
                  </form>
                <% } %>
                <% if (userRole === 'user') { %>
                  <form action="/solicitar" method="POST" style="display:inline;">
                    <input type="hidden" name="n_registro" value="<%= material.n_registro %>">
                    <button type="submit" class="btn btn-sm btn-success">Solicitar</button>
                  </form>
                <% } %>
              </div>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <script>
    <% if (typeof success === 'string' && success) { %>
      alert(decodeURIComponent('<%= success %>'));
    <% } %>
    <% if (typeof erro === 'string' && erro) { %>
      alert(decodeURIComponent('<%= erro %>'));
    <% } %>
  </script>
</body>
</html>
