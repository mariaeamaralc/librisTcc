<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Libris | Materiais</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    html, body {
      height: 100%;
      margin: 0;
      padding: 0;
      background: linear-gradient(135deg, #151F55, #AD8D8D);
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      color: #cebaba;
    }

    .container-custom {
      background-color: #283372;
      margin: 40px auto;
      padding: 30px;
      border-radius: 12px;
      box-shadow: 0 0 20px rgba(0,0,0,0.6);
      max-width: 1000px;
    }

    h1 {
      color: #cebaba;
      text-align: center;
      margin-bottom: 30px;
    }

    label, select, input, th, td {
      color: #cebaba;
    }

    .form-control,
    select.form-control {
      background-color: #fff;
      color: #000;
      border: 1px solid #ccc;
      font-size: 0.95rem;
      padding: 8px 10px;
      border-radius: 4px;
      height: 38px;
      width: 100%;
      box-sizing: border-box;
    }

    .btn-custom {
      background-color: #AD8D8D;
      color: #fff;
      border: none;
    }

    .btn-custom:hover {
      background-color: #283372;
      color: #AD8D8D;
    }

    table {
      background-color: rgba(255, 255, 255, 0.03);
      border-collapse: collapse;
      width: 100%;
      table-layout: fixed;
    }

    .table th, .table td {
      vertical-align: middle;
      border: 1px solid rgba(206, 186, 186, 0.3);
      background-color: transparent;
      color: #cebaba;
      padding: 6px 10px;
      font-size: 0.85rem;
      line-height: 1.2;
    }

    .table th {
      background-color: rgba(255, 255, 255, 0.06);
    }

    .table th:nth-child(1),
    .table td:nth-child(1) {
      width: 12%;
    }

    .table th:nth-child(2),
    .table td:nth-child(2) {
      width: 18%;
    }

    .btn-sm {
      padding: 4px 8px;
      font-size: 0.8rem;
    }

    .alert {
      background-color: #444;
      border: 1px solid #AD8D8D;
      color: #cebaba;
    }

    .btn-close {
      filter: invert(1);
    }

    .action-buttons {
      display: flex;
      flex-wrap: wrap;
      gap: 6px;
    }

    .action-buttons form {
      margin: 0;
    }

    .form-wrapper {
      max-width: 500px;
      margin-bottom: 30px;
    }
  </style>
</head>
<body>
  <div class="container-custom">
    <h1>Materiais Cadastrados</h1>

    <% if (success) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        Material cadastrado com sucesso!
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fechar"></button>
      </div>
    <% } %>

    <!-- Formulário de Busca por Número de Registro -->
    <!-- Formulário de Busca por Número de Registro -->
<form method="GET" action="/material/pesquisar" class="d-flex align-items-end mb-3" style="max-width: 500px;">
  <div class="form-group flex-grow-1 mr-2">
    <label for="n_registro">Buscar por Número de Registro:</label>
    <input type="text" id="n_registro" name="n_registro" class="form-control">
  </div>
  <button type="submit" class="btn btn-sm btn-custom mb-1">Buscar</button>
</form>

<!-- Formulário de Filtro por Categoria -->
<form method="GET" action="/material" class="d-flex align-items-end mb-4" style="max-width: 500px;">
  <div class="form-group flex-grow-1 mr-2">
    <label for="categoria">Filtrar por Categoria:</label>
    <select id="categoria" name="categoria" class="form-control text-dark">
      <option value="">Todas as categorias</option>
      <% categoria.forEach(cat => { %>
        <option value="<%= cat.id %>" <%= cat.id == categoriaSelecionada ? 'selected' : '' %>>
          <%= cat.nome %>
        </option>
      <% }) %>
    </select>
  </div>
  <button type="submit" class="btn btn-sm btn-custom mb-1">Filtrar</button>
</form>


    <!-- Tabela de Materiais -->
    <table class="table table-bordered mt-4">
      <thead>
        <tr>
          <th>Número de Registro</th>
          <th>Título</th>
          <th>Autor</th>
          <th>Editora</th>
          <th>Idioma</th>
          <th>Categoria</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <% materiais.forEach(material => { %>
          <tr>
            <td><%= material.n_registro %></td>
            <td><%= material.titulo %></td>
            <td><%= material.autor %></td>
            <td><%= material.editora %></td>
            <td><%= material.idioma %></td>
            <td><%= material.categoria_nome %></td>
            <td>
              <div class="action-buttons">
                <a href="/material/<%= material.n_registro %>" class="btn btn-sm btn-custom">Visualizar</a>
                <a href="/material/<%= material.n_registro %>/edit" class="btn btn-sm btn-custom">Editar</a>
                <form action="/material/<%= material.n_registro %>/delete" method="POST">
                  <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Tem certeza que deseja excluir este material?')">
                    Excluir
                  </button>
                </form>
              </div>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>