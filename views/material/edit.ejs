<div class="container-custom" style="margin-top: 10px;  background-color: #283372;
      margin: 10px auto;
      padding: 30px;
      border-radius: 12px;
      box-shadow: 0 0 20px rgba(0,0,0,0.6);
       max-width: 800px;">
  <h1 class="text-center mb-4">Editar Material</h1>

  <form action="/material/<%= material.n_registro %>?_method=PUT" method="POST" style="max-width: 800px; margin: auto;">
    <div class="row g-3">
      <div class="col-md-6">
        <label for="titulo">Título:</label>
        <input type="text" class="form-control" id="titulo" name="titulo" value="<%= material.titulo %>" required>
      </div>

      <div class="col-md-6">
        <label for="autor">Autor:</label>
        <input type="text" class="form-control" id="autor" name="autor" value="<%= material.autor %>" required>
      </div>

      <div class="col-md-6">
        <label for="editora">Editora:</label>
        <input type="text" class="form-control" id="editora" name="editora" value="<%= material.editora %>" required>
      </div>

      <div class="col-md-6">
        <label for="ano_publi">Ano de Publicação:</label>
        <input type="number" class="form-control" id="ano_publi" name="ano_publi" value="<%= material.ano_publi %>" required>
      </div>

      <div class="col-md-6">
        <label for="isbn">ISBN:</label>
        <input type="text" class="form-control" id="isbn" name="ISBN" value="<%= material.ISBN %>" required>
      </div>

      <div class="col-md-6">
        <label for="idioma">Idioma:</label>
        <input type="text" class="form-control" id="idioma" name="idioma" value="<%= material.idioma %>" required>
      </div>

      <div class="col-md-6">
        <label for="n_paginas">Número de Páginas:</label>
        <input type="number" class="form-control" id="n_paginas" name="n_paginas" value="<%= material.n_paginas %>" required>
      </div>

      <div class="col-md-6">
        <label for="tipo">Tipo:</label>
        <input type="text" class="form-control" id="tipo" name="tipo" value="<%= material.tipo %>" required>
      </div>

      <div class="col-md-6">
        <label for="prateleira">Prateleira:</label>
        <input type="text" class="form-control" id="prateleira" name="prateleira" value="<%= material.prateleira %>" required>
      </div>

      <div class="col-md-6">
        <label for="data_aquisicao">Data de Aquisição:</label>
        <input type="date" class="form-control" id="data_aquisicao" name="data_aquisicao" 
               value="<%= (material.data_aquisicao instanceof Date) ? 
                material.data_aquisicao.toISOString().split('T')[0] : 
                (material.data_aquisicao || '') %>" required>
      </div>

      <div class="col-md-12">
        <label for="categoria">Categoria:</label>
        <select class="form-control text-dark" id="categoria" name="categoria" required>
          <% categoria.forEach(function(categoria) { %>
            <option value="<%= categoria.id %>" <%= material.categoria == categoria.id ? 'selected' : '' %>>
              <%= categoria.nome %>
            </option>
          <% }); %>
        </select>
      </div>

      <div class="col-12 text-center mt-4">
        <button type="submit" class="btn btn-custom btn-sm px-4 py-2" style="font-weight: bold;">
          Salvar Alterações
        </button>
      </div>
    </div>
  </form>
</div>